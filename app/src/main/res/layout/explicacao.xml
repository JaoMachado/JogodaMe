<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF">

    <ScrollView
        android:layout_width="138dp"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:background="#4CAF50"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/bt1"
                android:layout_width="match_parent"
                android:layout_height="92dp"
                app:srcCompat="@drawable/algasbt"
                tools:ignore="SpeakableTextPresentCheck" />

            <ImageButton
                android:id="@+id/bt2"
                android:layout_width="match_parent"
                android:layout_height="92dp"
                app:srcCompat="@drawable/reflorestamentobt"
                tools:ignore="SpeakableTextPresentCheck" />

            <ImageButton
                android:id="@+id/bt3"
                android:layout_width="match_parent"
                android:layout_height="92dp"
                app:srcCompat="@drawable/sustentabilidadebt"
                tools:ignore="SpeakableTextPresentCheck" />

            <ImageButton
                android:id="@+id/bt4"
                android:layout_width="match_parent"
                android:layout_height="92dp"
                app:srcCompat="@drawable/carroeletricobotao"
                tools:ignore="SpeakableTextPresentCheck" />

            <ImageButton
                android:id="@+id/bt5"
                android:layout_width="match_parent"
                android:layout_height="92dp"
                app:srcCompat="@drawable/bicicletabotao"
                tools:ignore="SpeakableTextPresentCheck" />

            <ImageButton
                android:id="@+id/bt6"
                android:layout_width="match_parent"
                android:layout_height="92dp"
                app:srcCompat="@drawable/energiasolarbotao"
                tools:ignore="SpeakableTextPresentCheck" />

            <ImageButton
                android:id="@+id/bt7"
                android:layout_width="match_parent"
                android:layout_height="92dp"
                app:srcCompat="@drawable/reciclagembotao"
                tools:ignore="SpeakableTextPresentCheck" />

            <ImageButton
                android:id="@+id/bt8"
                android:layout_width="match_parent"
                android:layout_height="92dp"
                app:srcCompat="@drawable/telhadoverdebotao"
                tools:ignore="SpeakableTextPresentCheck" />

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.1"
        android:background="#72A0C17A"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgv1"
            android:layout_width="275dp"
            android:layout_height="256dp"
            android:layout_weight="0" />

        <ScrollView
            android:layout_width="239dp"
            android:layout_height="392dp">

            <TextView
                android:id="@+id/tx1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:textColor="#000000"
                android:textColorHighlight="#000000"
                android:textColorHint="#000000"
                android:textColorLink="#000000" />
        </ScrollView>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt0"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="261dp"
            android:layout_height="wrap_content"
            android:background="@android:color/holo_green_dark"
            android:backgroundTint="#4CAF50"
            android:padding="25px"
            android:text="@string/chave9"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold"
            app:iconTint="#4CAF50" />

    </LinearLayout>
</LinearLayout>